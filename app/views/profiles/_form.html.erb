<%= form_with model: profile, builder: TailwindFormBuilder do |form| %>

  <% form.grid do %>
    <%= form.label :display_name %>
    <%= form.text_field :display_name %>

    <%= form.label :login %>
    <%= form.text_field :login %>

    <%= form.label :email %>
    <%= form.text_field :email %>

    <%= form.label :roles, "may admin" %>
    <div>
      <%= form.collection_check_boxes :roles, Podcast.all, :slug, :name,
        help: "Which podcasts this profile may manage" %>
    </div>

    <%= form.label :bio %>
    <%= form.text_area :bio, data: { "controller": "mde" } %>

    <%= form.label :avatar, "Avatar URL" %>
    <%= form.stack do %>
      <%= form.text_field :avatar %>
      <em>Will default to gravatar if not given</em>
    <% end %>

    <%= form.actions do %>
      <%= form.submit %>
      <%= form.cancel root_path %>
    <% end %>

  <% end %>
<% end %>
