<% if @episode.errors.any? %>
  <ul>
  <% @episode.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  <% end %>
  </ul>
<% end %>


<%= form_with model: @episode, builder: TailwindFormBuilder, url: [@podcast, @episode], class: "grid grid-cols-[fit-content(20rem)_minmax(60rem,1fr)] gap-3" do |form| %>

    <%= form.label :name %>
    <%= form.text_field :name %>

    <%= form.label :number %>
    <%= form.number_field :number %>

    <%= form.label :description %>
    <%= form.text_area :description %>

    <%= form.label :published %>
    <%= form.date_field :published %>

    <%= form.label :audio %>
    <%= form.hidden_field :audio, value: @episode.cached_audio_data %>
    <%= form.file_field :audio %>

    <%= form.check_box :explicit, class: "justify-self-end" %>
    <%= form.label :explicit, "Contains explicit content", class: "justify-self-begin" %>

    <%= form.label :show_notes, class: "no-wrap" %>
    <%= form.text_area :show_notes %>

    <div class="col-span-2">
      <%= form.submit class: "bg-stone-500 p-4 rounded-md font-bold"  %>
      <%= link_to "Cancel", podcast_url(@podcast), class: "bg-gray-300 p-5 rounded-md font-bold" %>
    </div>
<% end %>
