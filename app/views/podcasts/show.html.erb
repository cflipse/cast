<header class="flex flex-cols pb-4">
  <h2 class="text-4xl font-bold tracking-wide text-red-700 grow"><%= @podcast.name %></h2>

  <div class="justify-self-end">
    [<%= link_to "feed", podcast_url(@podcast, format: :rss) %>]
  </div>

</header>

<div class="flex flex-row gap-8 mb-8">
  <div>
    <%= image_tag @podcast.image_url if @podcast.image.present? %>
  </div>

  <div>
    <p>
    <%= simple_format @podcast.description %>
    </p>

    <% if @podcast.explicit %>
      <div>
        <em>warning: Contains explicit content</em>
      </div>
    <% end %>
  </div>
</div>

<section id="hosts">
  <ul>
    <% @podcast.hosts.each do |host| %>
      <li><%= host.display_name %></li>
    <% end %>
  </ul>
</section>


<section id="episodes">
  <% @podcast.episodes.each do |episode| %>
    <article class="my-4">
      <header class="flex flex-cols">
        <h3 class="text-xl text-red-700 font-semibold tracking-wide underline grow"><%= link_to episode.title, podcast_episode_path(@podcast, episode) %></h3>

        <%= link_to "edit", edit_podcast_episode_url(@podcast, episode) %>
      </header>
      <p class="prose">
        <%= simple_format episode.description %>
      </p>

      <%= audio_tag episode.audio_url, controls: true, class: "w-full" if episode.audio.present? %>
    </article>
  <% end %>

  <footer>
    <%= link_to "New Episode", new_podcast_episode_path(@podcast) %>
  </footer>
</section>
