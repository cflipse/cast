<article class="shadow-lg p-6 bg-slate-200">

  <header class="flex flex-cols pb-4">
    <h2 class="text-4xl font-bold tracking-wide text-red-700 grow"><%= link_to podcast.name, podcast_url(podcast) %></h2>

    <div class="justify-self-end">
      [<%= link_to "feed", podcast_url(podcast, format: :rss) %>]
    </div>
  </header>

  <div class="flex flex-row gap-8 mb-8">
    <div>
      <%= image_tag podcast.image_url if podcast.image.present? %>
    </div>

    <div>
      <p>
      <%= simple_format podcast.description %>
      </p>

      <% if podcast.explicit %>
        <div>
          <em>warning: Contains explicit content</em>
        </div>
      <% end %>
    </div>
  </div>

  <section>
    <h3 class="text-2xl mb-2">latest episode: <%= tag.span latest.name, class: "text-red-700" %></h3>
    <%= latest.description %>

    <div class="my-4">
      <%= link_to "Listen now", podcast_episode_path(podcast, latest),
        class: "p-3 bg-red-700 shadow text-gray-200 rounded-md" %>
    </div>
  </section>

</article>
