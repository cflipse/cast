# start a server with
#  nohup minio server ./data --console-adress ":9001" --certs-dir=./certs

if [ -f .env.development ]; then source .env.development ; fi
if [ -f .env ]; then source .env ; fi

if [ -z ${MINIO_ADDRESS} ]; then
  echo "Make sure you're running a minio console!"
  exit 1
fi

mkdir -p db/spaces/development/
mcli mirror bwoa/casts/files/ ./db/spaces/development/

mcli alias set minio-cast http://${MINIO_ADDRESS} ${MINIO_ROOT_USER} ${MINIO_ROOT_PASSWORD}

mcli mb minio-cast/casts;
mcli anonymous set public minio-cast/casts;

mcli mirror  ./db/spaces/ minio-cast/casts;
